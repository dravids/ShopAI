{
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python", // Standard .venv naming
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/venv": true // Add virtual environment to excluded files
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // Correct Black formatter ID
        "editor.formatOnSave": true,
        "editor.rulers": [
            88
        ],
        "editor.tabSize": 4 // Explicit Python indentation setting
    },
    "python.analysis.extraPaths": [
        "src" // Simplified path specification
    ],
    "python.testing.pytestEnabled": true, // Explicit pytest configuration
    "python.testing.unittestEnabled": false
}